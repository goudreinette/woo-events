<div id="calendar-wrap">
    <div class="months">
        {{#months}}
            <div class="month" data-month="{{month}}" data-year="{{year}}">
                <nav>
                    <button id="previous">
                        <i class="ion-chevron-left"></i>
                    </button>
                    <div class="month-year">{{localised}} {{year}}</div>
                    <button id="next">
                        <i class="ion-chevron-right"></i>
                    </button>
                </nav>

                <table id="calendar">
                    <td colspan="7" align="center">Ma</td>
                    <td colspan="7" align="center">Di</td>
                    <td colspan="7" align="center">Wo</td>
                    <td colspan="7" align="center">Do</td>
                    <td colspan="7" align="center">Vr</td>
                    <td colspan="7" align="center">Za</td>
                    <td colspan="7" align="center">Zo</td>
                    {{#days}}
                        <tr>
                            {{#.}}
                                <td class="day {{.}}" align="center" colspan="7"
                                    data-start-date="{{year}}-{{month}}-{{.}}">
                                    {{.}}
                                </td>
                            {{/.}}
                        </tr>
                    {{/days}}
                </table>
            </div>
        {{/months}}
    </div>
    <div class="events">
        {{#events}}
            <div class="event" data-start-date="{{start-date-only}}">
                <div class="image" style="background-image: url({{image}})"></div>
                <div class="right">
                    <p class="date">{{start-date}} <br/>{{#has-end}}{{end-date}}{{/has-end}}</p>
                    <h5><a href="{{permalink}}">{{post_title}}</a></h5>
                </div>
            </div>
        {{/events}}
    </div>
</div>